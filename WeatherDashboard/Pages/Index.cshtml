@page
@model WeatherDashboard.Pages.IndexModel
<link rel="stylesheet" href="~/css/site.css" />

<div class="card">
    <form method="post">
        @Html.AntiForgeryToken()
        <input type="text" name="City" placeholder="Enter city" />
        <button>Get Weather</button>
    </form>

    @if (Model.Weather != null)
    {
        <h2>@Model.Weather.City</h2>
        <p>@Model.Weather.TemperatureC°C</p>
        <p>Wind: @Model.Weather.WindSpeed km/h</p>
        <p>Code: @Model.Weather.ConditionCode</p>
    }
</div>
